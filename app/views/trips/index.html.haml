.row
  .twelve.columns
    %h1   TRIP SHIT


.addtrip
  .form
    //FORM STUFF GOES HERE FOR ADD
  .addtripbutton

//LOOP OVER USER TRIPS
.trips#trips
  - @trips.each do |trip|
    .trip
      .showtrip
        .updowns
          .up
          .down
        .trip_name=trip.name
        .trip_startdate=trip.startdate
        .trip_enddate=trip.enddate
        .buttons
          .edit_trip_btn
          .delete_trip_btn
      .edittrip.hide

      .tripactivities.hide
        - trip.activities.each do |activity|
          %script
            ="activities.push(activactivity:{name:'#{activity.name}', description:'#{activity.description}',image:'#{activity.image}',address:'#{activity.address}',longitude:#{activity.longitude},latitude:#{activity.latitude},votes:#{activity.votes},trip_id:#{activity.trip_id}});"
          / .activity
          /   .showactivity
          /     .updowns
          /       .up
          /       .down
          /     .total_votes=activity.total_votes
          /     =image_tag activity.image
          /     .activity-name=activity.name
          /     .activity-description=activity.description
            .activity_form.hide
              = form_tag do
                = text_field_tag 'Name'
                = text_area_tag  'Description'
                = link_to "Save Changes", :class=>'button radius success tiny activity-form-btn'
                = link_to "Cancel", :class=>'button radius alert activity-form-cancel-btn'
    %script
      create_trip(trip.id);
