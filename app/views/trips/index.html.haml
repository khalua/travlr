.row
  .twelve.columns
    %h1   TRIP SHIT
%script
  var trip_array =[];
%script
  var activities = [];
.addtrip
  .form
    //FORM STUFF GOES HERE FOR ADD
  .addtripbutton

//LOOP OVER USER TRIPS
.trips#trips

  - @trips.each do |trip|
    %script
      ="add_trip_to_array(#{trip.id});"
    = hidden_field_tag "trip_id", trip.id
    = link_to("New Activity", nil, :id=>'new_activity', :class=>'button')
    .tripactivities
      - trip.activities.each do |activity|
        %script
          = "activities.push({name:'#{activity.name}', description:'#{activity.description}',image:'#{activity.image}',address:'#{activity.address}',longitude:#{activity.longitude},latitude:#{activity.latitude},total_votes:#{activity.total_votes},trip_id:#{activity.trip_id}});"
.row
  .five.columns
    .activity_form.hide
      = form_tag('/trips') do
        = label_tag      'Name'
        = text_field_tag 'activity-name'
        = label_tag      'category'
        = text_field_tag 'activity-category'
        = label_tag      'description'
        = text_area_tag  'activity-description'
        = label_tag      'Address'
        = text_field_tag "activity-address"
        = label_tag      'Image'
        = text_field_tag "activity-image"
        = link_to("Save Changes",nil, :id => "activity-save-changes", :class=>'button radius success activity-form-btn')
        = link_to("Cancel", nil, :id =>"activity-cancel", :class=>'button radius alert activity-form-cancel-btn')
        = link_to('Enter', nil, :id =>"create_activity", :class=>"button radius")
#edit_trip_form.hide








