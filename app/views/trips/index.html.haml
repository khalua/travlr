.row
  .twelve.columns
%h1   TRIP SHIT
%script
  var trip_array =[];
.addtrip
  .form
    //FORM STUFF GOES HERE FOR ADD
  .addtripbutton

//LOOP OVER USER TRIPS
.trips#trips
  - @trips.each do |trip|
    .tripactivities.hide
      - trip.activities.each do |activity|
        %script
          = "activities.push(activactivity:{name:'#{activity.name}', description:'#{activity.description}',image:'#{activity.image}',address:'#{activity.address}',longitude:#{activity.longitude},latitude:#{activity.latitude},total_votes:#{activity.total_votes},trip_id:#{activity.trip_id}});"

#edit_trip_form.hide

.activity_form.hide
  = form_tag('/trips') do
    = text_field_tag 'Name'
    = text_area_tag  'Description'
    = link_to "Save Changes", :class=>'button radius success tiny activity-form-btn'
    = link_to "Cancel", :class=>'button radius alert activity-form-cancel-btn'
    = submit_tag 'Enter'